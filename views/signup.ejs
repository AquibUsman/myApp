<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.min.css"> 
    <link rel="stylesheet" type="text/css" href="/stylesheets/font-awesome.min.css"><!-- load bootstrap css -->
	<!-- load fontawesome -->
	<link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1"> <!-- load fontawesome -->
	
</head>
<body>
<div class="container login-page">

<div class="col-sm-6 col-sm-offset-3">
    <br><br>

	<h1><span class="fa fa-sign-in"></span> Signup</h1>
    
    <hr>

	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

	<!-- LOGIN FORM -->
	<form action="/signup" method="post">
		<div class="form-group">
			<label>Username</label>
			<input type="text" class="form-control" name="username">
		</div>
		<div class="form-group">
			<label>Password</label>
			<input type="password" class="form-control" name="password">
		</div>

		<button type="submit" class="login-btn btn btn-default">Signup</button>
	</form>

	<hr>

	<p>Already have an account? <a class="colblue" href="/login">Login</a></p>
	<p>Or go <a class="colblue" href="/">home</a>.</p>

</div>

</div>
</body>
</html>
